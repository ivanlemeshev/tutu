<%= form_for [@train, @ticket] do |f| %>

  <%= render 'common/errors', resource: @ticket %>

  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :middle_name %>
    <%= f.text_field :middle_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :passport_series %>
    <%= f.text_field :passport_series, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :passport_number %>
    <%= f.text_field :passport_number, class: 'form-control' %>
  </div>

  <%= link_to t('common.back'), search_path, class: 'btn btn-default' %>
  <%= f.submit t('common.buy'), class: 'btn btn-success pull-right' %>

<% end %>
