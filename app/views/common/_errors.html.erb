<% if resource.errors.any? %>

  <div id="error_explanation">
    <h2>
      <%= pluralize(resource.errors.count, 'error') %>
      prohibited this railway_station from being saved:
    </h2>

    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>

<% end %>
