<%= form_for @route do |f| %>

  <% if @route.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@route.errors.count, 'error') %>
        prohibited this route from being saved:
      </h2>
      <ul>
        <% @route.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
