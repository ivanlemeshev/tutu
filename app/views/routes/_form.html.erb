<%= form_for @route do |f| %>

  <%= render 'common/errors', resource: @route %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :railway_station_ids, 'Route stations' %><br>
    <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {}, { multiple: true } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
