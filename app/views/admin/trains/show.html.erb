<p>
  <strong><%= t('.coupe_top_seats') %>:</strong>
  <%= @train.car_seats(:coupe, :top) %>
</p>

<p>
  <strong><%= t('.economy_bottom_seats') %>:</strong>
  <%= @train.car_seats(:economy, :bottom) %>
</p>

<p>
  <strong><%= t('.economy_top_seats') %>:</strong>
  <%= @train.car_seats(:economy, :top) %>
</p>

<p>
  <strong><%= t('.economy_side_bottom_seats') %>:</strong>
  <%= @train.car_seats(:economy, :side_bottom) %>
</p>

<p>
  <strong><%= t('.economy_side_top_seats') %>:</strong>
