  <%= @train.car_seats(:sitting, :bottom) %>
</p>

<p>
  <%= link_to t('.add_car'), new_admin_train_car_path(@train) %>
</p>

<p>
  <strong><%= t('common.cars') %>:</strong>
  <% if @train.cars.present? %>
  <table>
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @train.ordered_cars.each do |car| %>
        <tr>
          <td><%= link_to car.serial_number, [:admin, car] %></td>
          <td><%= link_to t('common.edit'), edit_admin_car_path(car) %></td>
          <td><%= link_to t('common.destroy'),
                          [:admin, car],
                          method: :delete,
                          data: { confirm: t('common.sure') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <%= t('common.not_set') %>
  <% end %>
</p>

<p>
  <strong><%= t('common.route') %>:</strong>
  <% if @train.route.present? %>
    <%= @train.route.title %>
  <% else %>
    <%= t('common.not_set') %>
  <% end%>
</p>

